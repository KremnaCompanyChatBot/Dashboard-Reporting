{
  "name": "nest_dashboard_api",
  "version": "1.0.0",
  "description": "NestJS API with TypeORM config (Postgres) and in-memory mock data for items",
 "scripts": {
  "start": "tsc && nodemon dist/main.js",
  "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' -r tsconfig-paths/register src/main.ts",
  "build": "tsc -p tsconfig.build.json",
  "start:prod": "node dist/main.js"
 },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "nodemon": "^3.1.10",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
